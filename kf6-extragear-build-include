module-set extragear-network
     repository kde-projects
    cmake-options -DBUILD_WITH_QT6=ON -DEXCLUDE_DEPRECATED_BEFORE_AND_AT=5.99.0
     use-modules libktorrent
     # modules not yet KF6-ready
     ignore-modules ktorrent

end module-set

module-set extragear-sdk
    repository kde-projects
    cmake-options -DBUILD_WITH_QT6=ON -DEXCLUDE_DEPRECATED_BEFORE_AND_AT=5.99.0
    use-modules libkomparediff2 kompare selenium-webdriver-at-spi
    ignore-modules kdesvn massif-visualizer kcachegrind heaptrack
end module-set

module-set kirigami-addons
    repository kde-projects
    cmake-options -DBUILD_WITH_QT6=ON -DEXCLUDE_DEPRECATED_BEFORE_AND_AT=5.105.0
    use-modules kirigami-addons
end module-set

